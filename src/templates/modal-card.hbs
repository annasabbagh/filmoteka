<div class='modal' id="{{id}}">
  <button type='button' class='modal__close-button'></button>

  <div class='modal-wrap'>
    <img
      class='modal__poster-link'
      src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
      alt='{{title}}'
      loading='lazy'
    />

    <div class='modal-info'>
      <h2 class='modal-info__title'>{{title}}</h2>

      <ul class='modal-info__list list'>
        <li class='modal-info__item'>
          <p class='modal-info__title-item'>Vote / Votes</p>
          <p class='modal-info__value-item'>
            <span class='vote'>{{vote_average}}</span>
            /
            <span class='votes'>{{vote_count}}</span>
          </p>
        </li>
        <li class='modal-info__item'>
          <p class='modal-info__title-item'>Popularity</p>
          <p class='modal-info__value-item'>{{popularity}}</p>
        </li>
        <li class='modal-info__item'>
          <p class='modal-info__title-item'>Original Title</p>
          <p class='modal-info__value-item'>{{original_title}}</p>
        </li>
        <li class='modal-info__item'>
          <p class='modal-info__title-item'>Genre</p>
          <p class='modal-info__value-item'>{{#if genres}}
            {{#each genres}}
            <span>{{this.name}}{{#unless @last}},{{/unless}}</span>
            {{/each}}
            {{else}}<span>N/A</span>
            {{/if}}</p>
        </li>
      </ul>

      <h3 class='modal-info__description-title'>ABOUT</h3>

      <p class='modal-info__description'>{{overview}}</p>

      <div class='modal-buttons'>
        <button type='button' class='modal-button modal-watched-button'>ADD TO WATCHED</button>
        <button type='button' class='modal-button modal-queue-button'>ADD TO QUEUE</button>
      </div>
    </div>
  </div>
</div>